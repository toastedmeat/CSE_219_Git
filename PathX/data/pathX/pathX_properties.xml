<?xml version="1.0" encoding="UTF-8"?>
<!--
    The properties in this file setup a Harry Potter flavor of this game called
    The Sorting Hat. Note that by swapping out all these settings we could easily
    change the flavor.
-->
<properties>
    <property_list>
        <!-- ALL THE IMAGES TO BE USED IN THE GAME -->
        <property name="IMAGE_BACKGROUND_GAME"              value="./pathX/BackgroundGame.png"></property>
        <property name="IMAGE_BACKGROUND_MENU"              value="./pathX/BackgroundMenu.png"></property>
        <property name="IMAGE_BACKGROUND_HELP"              value="./pathX/HelpMenu.png"></property>
        <property name="IMAGE_BUTTON_NEW"                   value="./pathX/ButtonNewGame.png"></property>
        <property name="IMAGE_BUTTON_NEW_MOUSE_OVER"        value="./pathX/ButtonNewGameMouseOver.png"></property>
        <property name="IMAGE_BUTTON_BACK"                  value="./pathX/ButtonBack.png"></property>
        <property name="IMAGE_BUTTON_BACK_MOUSE_OVER"       value="./pathX/ButtonBackMouseOver.png"></property>
        <property name="IMAGE_BUTTON_STATS"                 value="./pathX/ButtonStats.png"></property>
        <property name="IMAGE_BUTTON_STATS_MOUSE_OVER"      value="./pathX/ButtonStatsMouseOver.png"></property>
        <property name="IMAGE_BUTTON_UNDO"                  value="./pathX/ButtonUndo.png"></property>
        <property name="IMAGE_BUTTON_UNDO_MOUSE_OVER"       value="./pathX/ButtonUndoMouseOver.png"></property>
        <property name="IMAGE_BUTTON_TEMP_TILE"             value="./pathX/ButtonTempTile.png"></property>
        <property name="IMAGE_BUTTON_TEMP_TILE_MOUSE_OVER"  value="./pathX/ButtonTempTileMouseOver.png"></property>
        <property name="IMAGE_CURSOR_WAND"                  value="./pathX/CursorWand.png"></property>
        <property name="IMAGE_DECOR_TIME"                   value="./pathX/DecorTime.png"></property>
        <property name="IMAGE_DECOR_MISCASTS"               value="./pathX/DecorMiscasts.png"></property>
        <property name="IMAGE_DIALOG_STATS"                 value="./pathX/DialogStats.png"></property>
        <property name="IMAGE_DIALOG_WIN"                   value="./pathX/DialogWin.png"></property>
        <property name="IMAGE_SPRITE_SHEET_CHARACTER_TILES" value="./pathX/SpriteSheetCharacterTiles.png"></property>
        <property name="IMAGE_TILE_BACKGROUND"              value="./pathX/TileBackground.png"></property>
        <property name="IMAGE_TILE_BACKGROUND_SELECTED"     value="./pathX/TileBackgroundSelected.png"></property>
        <property name="IMAGE_TILE_BACKGROUND_MOUSE_OVER"   value="./pathX/TileBackgroundMouseOver.png"></property>
        <property name="IMAGE_WINDOW_ICON"                  value="./pathX/WindowIcon.png"></property>

        <!-- ALL THE TEXT TO BE DISPLAYED -->
        <property name="TEXT_ERROR_LOADING_AUDIO"               value="Error Loading an Audio File"></property>
        <property name="TEXT_ERROR_LOADING_LEVEL"               value="Error Loading a Level File"></property>
        <property name="TEXT_ERROR_LOADING_RECORD"              value="Error Loading the Player Record"></property>
        <property name="TEXT_ERROR_LOADING_XML_FILE"            value="Error Loading an XML File"></property>
        <property name="TEXT_ERROR_SAVING_RECORD"               value="Error Saving the Player Record"></property>
        <property name="TEXT_LABEL_STATS_ALGORITHM"             value="Algorithm: "></property>
        <property name="TEXT_LABEL_STATS_GAMES"                 value="Games: "></property>
        <property name="TEXT_LABEL_STATS_WINS"                  value="Wins: "></property>
        <property name="TEXT_LABEL_STATS_PERFECT_WINS"          value="Perfect Wins: "></property>
        <property name="TEXT_LABEL_STATS_FASTEST_PERFECT_WIN"   value="Fastest Perfect Win: "></property>
        <property name="TEXT_PROMPT_EXIT"                       value="Are you sure you wish to exit?"></property>
        <property name="TEXT_TITLE_BAR_GAME"                    value="PathX"></property>
        <property name="TEXT_TITLE_BAR_ERROR"                   value="An error has occurred"></property>                
        
        <!-- AUDIO FILES -->
        <property name="AUDIO_CUE_BAD_MOVE"                 value="./pathX/BadMove.wav"></property>
        <property name="AUDIO_CUE_CHEAT"                    value="./pathX/Cheat.wav"></property>
        <property name="AUDIO_CUE_DESELECT_TILE"            value="./pathX/DeselectTile.wav"></property>
        <property name="AUDIO_CUE_GOOD_MOVE"                value="./pathX/GoodMove.wav"></property>
        <property name="AUDIO_CUE_SELECT_TILE"              value="./pathX/SelectTile.wav"></property>
        <property name="AUDIO_CUE_UNDO"                     value="./pathX/Undo.wav"></property>
        <property name="AUDIO_CUE_WIN"                      value="./pathX/Win.mid"></property>
        <property name="SONG_CUE_GAME_SCREEN"               value="./pathX/GameSong.mid"></property>        
        <property name="SONG_CUE_MENU_SCREEN"               value="./pathX/MenuSong.mid"></property>
    </property_list>
    
    <!-- PLAYABLE LEVELS CREATED WITH THE LEVEL EDITOR -->
    <property_options_list>
        <property_options name="LEVEL_OPTIONS">
            <option>./pathX/SelectionSnake.sort</option>
            <option>./pathX/BubbleSortCoil.sort</option>
            <option>./pathX/SelectionL.sort</option>
            <option>./pathX/BubbleSortO.sort</option>
            
        </property_options>
        <property_options name="LEVEL_IMAGE_OPTIONS">
            <option>./pathX/ButtonPlay.png</option>
            <option>./pathX/ButtonReset.png</option>
            <option>./pathX/ButtonSettings.png</option>
            <option>./pathX/ButtonHelp.png</option>
        </property_options>
        <property_options name="LEVEL_MOUSE_OVER_IMAGE_OPTIONS">
            <option>./pathX/ButtonPlayMouseOver.png</option>
            <option>./pathX/ButtonResetMouseOver.png</option>
            <option>./pathX/ButtonSettingsMouseOver.png</option>
            <option>./pathX/ButtonHelpMouseOver.png</option>
        </property_options>
    </property_options_list>
</properties>